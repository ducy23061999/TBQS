require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '10.0'

target 'TimBanQS' do
  config = use_native_modules!

  use_react_native!(:path => config["reactNativePath"])

  pod 'RNGestureHandler', :path => '../node_modules/react-native-gesture-handler'

  pod 'RNVectorIcons', :path => '../node_modules/react-native-vector-icons'

  pod 'react-native-location', :path => '../node_modules/react-native-location'

  pod 'RNFastImage', :path => '../node_modules/react-native-fast-image'

  pod 'react-native-maps', :path => '../node_modules/react-native-maps'

  target 'TimBanQSTests' do
    inherit! :complete
    # Pods for testing
  end

  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  use_flipper!
  post_install do |installer|
    flipper_post_install(installer)
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '-DDONT_AUTOINSTALL_REANIMATED'
        end
    end
  end
end

target 'TimBanQS-tvOS' do
  # Pods for TimBanQS-tvOS

  target 'TimBanQS-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
  end
end
